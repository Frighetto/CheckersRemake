<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    <servlet>
        <servlet-name>RootController</servlet-name>
        <servlet-class>controller.RootController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexController</servlet-name>
        <servlet-class>controller.IndexController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameSessionController</servlet-name>
        <servlet-class>controller.GameSessionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LobbyController</servlet-name>
        <servlet-class>controller.LobbyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageController</servlet-name>
        <servlet-class>controller.MessageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MessageResponser</servlet-name>
        <servlet-class>controller.MessageResponser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RootController</servlet-name>
        <url-pattern>/RootController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexController</servlet-name>
        <url-pattern>/IndexController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameSessionController</servlet-name>
        <url-pattern>/GameSessionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LobbyController</servlet-name>
        <url-pattern>/LobbyController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageController</servlet-name>
        <url-pattern>/MessageController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MessageResponser</servlet-name>
        <url-pattern>/MessageResponser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/UserController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>root.jsp</welcome-file>
    </welcome-file-list>
</web-app>
